{
  "name": "creative-portfolio-website",
  "version": "1.0.0",
  "description": "A modern, responsive portfolio website to showcase creative work and projects",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 3000 -o",
    "dev": "http-server -p 3000 -o",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/css/style.min.css css/style.css css/responsive.css",
    "minify:js": "uglifyjs js/main.js -o dist/js/main.min.js -c -m",
    "serve": "http-server -p 8080",
    "lint:css": "stylelint css/*.css",
    "lint:js": "eslint js/*.js",
    "format": "prettier --write \"**/*.{html,css,js,md}\"",
    "test": "echo \"No tests specified\" && exit 0",
    "deploy": "npm run build && gh-pages -d .",
    "clean": "rm -rf dist && mkdir -p dist/css dist/js"
  },
  "keywords": [
    "portfolio",
    "website",
    "creative",
    "responsive",
    "html5",
    "css3",
    "javascript",
    "web-design"
  ],
  "author": "Creative Designer",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.54.0",
    "gh-pages": "^6.1.0",
    "http-server": "^14.1.1",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "uglify-js": "^3.17.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/creative-portfolio-website.git"
  },
  "bugs": {
    "url": "https://github.com/username/creative-portfolio-website/issues"
  },
  "homepage": "https://username.github.io/creative-portfolio-website/",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}